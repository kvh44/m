                                     <tr>
                                         <td style="text-align: right;padding-right: 5px;">{{'messages.email.username'|trans}}:</td>
                                         <td style="text-align: left;padding-left: 5px;"><b>{{username}}</b></td>
                                     </tr>
                                     <tr>
                                         <td style="text-align: right;padding-right: 5px;">{{'messages.email.email'|trans}}:</td>
