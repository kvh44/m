                                     </tr>
                                     <tr>
                                         <td style="text-align: right;padding-right: 5px;">{{'messages.email.updated'|trans}}:</td>
                                         <td style="text-align: left;padding-left: 5px;">{{updated}}</td>
                                     </tr>
                                 </table>
                                <br><br>
                                <!-- Button : BEGIN -->
