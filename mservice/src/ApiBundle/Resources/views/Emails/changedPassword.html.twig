                                     </tr>
                                     <tr>
                                         <td style="text-align: right;padding-right: 5px;">{{'messages.email.telephone'|trans}}:</td>
                                         <td style="text-align: left;padding-left: 5px;"><b>{{telephone}}</b></td>
                                     </tr>
                                     <tr>
                                         <td style="text-align: right;padding-right: 5px;">{{'messages.email.password'|trans}}:</td>
