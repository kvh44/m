                        <tr>
                            <td style="padding: 40px; text-align: center; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555;">
                                <h1 style="line-height: 1.2">{{'messages.email.hello'|trans}},{{username}},{{'messages.email.passwordChangedWords'|trans({'%password%': indication})}}</h1>
