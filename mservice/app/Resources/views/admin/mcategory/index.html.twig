{% extends '@Admin/base.html.twig' %}

{% block css %}
    {% stylesheets output='css/compiled/categorylist.css' 
            '@FrontBundle/Resources/public/inspinia/css/plugins/dataTables/datatables.min.css' 
            filter='cssrewrite' 
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>List of categories</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="#">Config option 1</a>
                                </li>
                                <li><a href="#">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables" id="categoryListTable">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>categoryZh</th>
                                        <th>categoryEn</th>
                                        <th>categoryFr</th>
                                        <th>isDeleted</th>
                                        <th>isDefaut</th>
                                        <th>score</th>
                                        <th>internalId</th>
                                        <th>slug</th>
                                        <th>created</th>
                                        <th>updated</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for mcategory in mcategories %}
                                        <tr class="gradeX">
                                            <td><a href="{{ path('mcategory_show', { 'id': mcategory.id }) }}">{{ mcategory.id }}</a></td>
                                            <td>{{ mcategory.categoryZh }}</td>
                                            <td>{{ mcategory.categoryEn }}</td>
                                            <td>{{ mcategory.categoryFr }}</td>
                                            <td>{% if mcategory.isDeleted %}Yes{% else %}No{% endif %}</td>
                                            <td>{% if mcategory.isDefaut %}Yes{% else %}No{% endif %}</td>
                                            <td>{{ mcategory.score }}</td>
                                            <td>{{ mcategory.internalId }}</td>
                                            <td>{{ mcategory.slug }}</td>
                                            <td>{% if mcategory.created %}{{ mcategory.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if mcategory.updated %}{{ mcategory.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>
                                                <a href="{{ path('mcategory_show', { 'id': mcategory.id }) }}">show</a>
                                                <a href="{{ path('mcategory_edit', { 'internalId': mcategory.internalId }) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path('mcategory_new') }}" class="btn btn-primary btn-lg">Create a new category</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block js %}  
    <!-- Page-Level Scripts -->
    <script>
        var mcategoryEditUrl = '{{ path('mcategory_edit', {'internalId' : 'internalId'}) }}';
        var mcategoryShowUrl = '{{ path('mcategory_show', {'id' : 'id'}) }}';
    </script>
{% endblock %}

