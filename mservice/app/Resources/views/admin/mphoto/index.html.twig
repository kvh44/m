{% extends '@Admin/base.html.twig' %}

{% block css %}
    {% stylesheets output='css/compiled/userlist.css' 
            '@FrontBundle/Resources/public/inspinia/css/plugins/dataTables/datatables.min.css' 
            filter='cssrewrite' 
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>List of photos</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="#">Config option 1</a>
                                </li>
                                <li><a href="#">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables" id="photoListTable">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th>username</th>
                                        <th>type</th>
                                        <th>postId</th>
                                        <th>origin</th>
                                        <th>medium</th>
                                        <th>small</th>
                                        <th>icon</th>
                                        <th>title</th>
                                        <th>isDeleted</th>
                                        <th>created</th>
                                        <th>updated</th>
                                        <th>action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for mphoto in mphotos %}
                                        <tr class="gradeX">
                                            <td>{{ mphoto.id }}</td>
                                            <td>
                                                {% if mphoto.photoIcon %}
                                                    <img src="/{{upload_directory}}{{mphoto.photoType|photoTypeDirectory}}{{icon_directory}}{{mphoto.userId}}/{{ mphoto.photoIcon }}" />
                                                {% else %}
                                                    No
                                                {% endif %}
                                            </td>
                                            <td>{{ mphoto.username }}</td>
                                            <td>{{ mphoto.photoType }}</td>
                                            <td>{{ mphoto.postId }}</td>
                                            <td>{{ mphoto.photoOrigin }}</td>
                                            <td>{{ mphoto.photoMedium }}</td>
                                            <td>{{ mphoto.photoSmall }}</td>
                                            <td>{{ mphoto.photoIcon }}</td>
                                            <td>{{ mphoto.title }}</td>
                                            <td>{% if mphoto.isDeleted %}Yes{% else %}No{% endif %}</td>
                                            <td>{% if mphoto.created %}{{ mphoto.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if mphoto.updated %}{{ mphoto.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>
                                                <a href="">show</a>
                                                <a href="">delete</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                        </div>
                                
                        <div class="ibox-content">
                            <div class="row">
                                <button type="button" class="btn btn-w-m btn-success " id="batch-edit-button">Batch Edit</button>
                                <button type="button" class="btn btn-w-m btn-danger hidden" id="delete-button">Delete <span class="delete-button-total hidden"></span></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block js %}  
    <!-- Page-Level Scripts -->
    <script>
        var mphotoListAjaxUrl = '{{ path('mphoto_list_ajax') }}';
        var mphotoShowUrl = '{{ path('mphoto_show_user_photo', {'id' : 'id'}) }}';
        var muserShowUrl = '{{ path('muser_show', {'id' : 'id'}) }}';
        var profilePhotoDirectory = '{{ profile_photo_directory }}';
        var userPhotoDirectory = '{{ user_photo_directory }}';
        var postPhotoDirectory = '{{ post_photo_directory }}';
        var iconDirectory = '{{ icon_directory }}';
        var uploadDirectory = '{{ upload_directory }}';
        var urlBatchDeletePhoto = '{{ path('mphoto_batch_delete') }}';
    </script>

    {% javascripts output='js/compiled/photolist.js' 
            '@FrontBundle/Resources/public/inspinia/js/plugins/dataTables/datatables.min.js'
            '@FrontBundle/Resources/public/inspinia/js/plugins/iCheck/icheck.min.js' 
            '@FrontBundle/Resources/public/inspinia/js/plugins/sweetalert/sweetalert.min.js' 
            '@AdminBundle/Resources/public/js/admin/common/common.js' 
            '@AdminBundle/Resources/public/js/admin/photo/index.js' 
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}



{% endblock %}


